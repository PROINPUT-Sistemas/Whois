{
  "name": "pentagonal/whois",
  "description": "Domain & Network Whois checker & info",
  "type": "library",
  "keywords": [
    "whois",
    "domain",
    "asn",
    "ipv6",
    "ipv4",
    "network",
    "iana"
  ],
  "require": {
    "php": "^7.0",
    "ext-curl": "*",
    "ext-iconv": "*",
    "guzzlehttp/guzzle": "^6",
    "true/punycode": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpunit/phpunit": "^6",
    "satooshi/php-coveralls": "^1"
  },
  "suggest" : {
    "ext-intl": "To get function idn_to_utf8 or idn_to_ascii faster and not use puny external library",
    "ext-mbstring": "To check length of unicode string length for sanitation"
  },
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "pentagonal",
      "email": "org@pentagonal.org"
    }
  ],
  "autoload" : {
    "psr-4" : {
      "\\Pentagonal\\WhoIs\\": "Src/Classes/"
    },
    "classmap": [
      "Src/Classes"
    ]
  },
  "bin": [
    "bin/pwg_asn",
    "bin/pwg_extensions",
    "bin/pwg_ip"
  ]
}
